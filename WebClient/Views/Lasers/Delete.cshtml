@model WebClient.DTOs.Laser.LaserDto
@{ ViewData["Title"] = "Удаление"; }

<h1>Удаление</h1>
<h3>Вы уверены, что хотите удалить этот лазер?</h3>
<div>
    <h4>Лазер #@Model.LaserId</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">X</dt>
        <dd class = "col-sm-10">@Model.X</dd>
        <dt class = "col-sm-2">Y</dt>
        <dd class = "col-sm-10">@Model.Y</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LaserId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>