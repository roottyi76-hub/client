@model WebClient.DTOs.Measurement.MeasurementCreateUpdateDto
@{ ViewData["Title"] = "Редактировать измерение"; }

<h1>Редактировать</h1>
<h4>Измерение #@ViewBag.MeasurementId</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" name="id" value="@ViewBag.MeasurementId" />
            <div class="form-group mb-3">
                <label asp-for="Intensity" class="control-label"></label>
                <input asp-for="Intensity" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="MeasurementDate" class="control-label"></label>
                <input asp-for="MeasurementDate" class="form-control" type="datetime-local" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="LaserId" class="control-label">Лазер</label>
                <select asp-for="LaserId" class="form-control" asp-items="ViewBag.Lasers"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Назад к списку</a>
</div>